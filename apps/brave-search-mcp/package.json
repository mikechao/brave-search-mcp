{
  "name": "brave-search-mcp",
  "type": "module",
  "version": "1.0.3",
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "description": "MCP Server that uses Brave Search API to search for images, general web search, video, news and points of interest.",
  "author": "mike.chao.one@gmail.com",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/mikechao/brave-search-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikechao/brave-search-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/mikechao/brave-search-mcp/issues"
  },
  "keywords": [
    "brave",
    "mcp",
    "web-search",
    "image-search",
    "news-search",
    "brave-search-api",
    "brave-search",
    "brave-search-mcp"
  ],
  "main": "dist/index.js",
  "bin": {
    "brave-search-mcp": "dist/index.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "tsup && pnpm run build:ui && shx chmod +x dist/*.js",
    "build:all": "pnpm run typecheck && pnpm run build",
    "build:watch": "tsup --watch",
    "build:ui": "INPUT=mcp-app.html vite build --config ui/vite.config.ts",
    "lint": "eslint . --ext .ts,.js,.mjs,.cjs --fix",
    "lint:check": "eslint . --ext .ts,.js,.mjs,.cjs",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run lint:check && pnpm run typecheck",
    "changeset:version": "changeset version && node scripts/sync-manifest-version.js && node scripts/cleanup-changesets.js"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^0.4.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "brave-search": "workspace:*",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "image-to-base64": "^2.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@changesets/cli": "^2.28.1",
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/image-to-base64": "^2.1.2",
    "@types/node": "^22.13.14",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "shx": "^0.4.0",
    "tsup": "^8.0.1",
    "typescript": "^5.8.2",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.1.0"
  }
}
